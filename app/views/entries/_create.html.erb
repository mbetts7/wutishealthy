<div ng-show="createEntry" class="modal fade bs-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <label>Enter a link</label>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" ng-click="submit()" data-dismiss="modal">Submit</button>
        <button class="btn btn-warning" ng-click="cancel()" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>